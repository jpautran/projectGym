{% extends "layout.njk" %}

{% block head %}
<title>Portfolio - Jo√£o Paulo</title>

<link href="https://fonts.googleapis.com/icon?family=Material+Icons"
rel="stylesheet">
{% endblock %}

{% block content %}

    <div id="wrapper">
        <h1>Projetos</h1>
    </div>

    <section class="cards">
        {% for item  in items %}
        <div class="card" id="{{ item.id }}">
            <div class="card__image-container">
                <img src="img/{{ item.id }}.png" alt="Imagem de {{ item.title }}">
                {% if item.featured %}
                    <div class="featured">Featured</div>
                {% endif %}
            </div>
            <div class="card__content">
                <p>{{ item.title  }}</p>
            </div>
            <div class="card__info">
                <p>{{ item.type }}</p>
                <p class="card__price">{{ item.price }}</p>
            </div>
        </div>
        {% endfor %}

    </section>

    <div class="modal-overlay">
        <div class="modal">
            <a class="close-modal">
                <i class="material-icons">close</i>
            </a>

            <div class="modal-content">
                <img src="" alt="Website">
            </div>
        </div>
    </div>





    <script src="scripts.js"></script>

{% endblock %}
